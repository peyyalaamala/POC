<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/timerTxt"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:textSize="@dimen/_10sdp"
        android:textAllCaps="true"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:text="30"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:background="@drawable/rounded_bg"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dismissTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        android:textAllCaps="false"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:text="Dismissed in"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/timerTxt"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_100sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/app_icon"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guideLine"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/activityTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_5sdp"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        android:fontFamily="@font/opensans_regular"
        android:gravity="left"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/link_color"
       />


    <TextView
        android:id="@+id/activityTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textAllCaps="false"
        android:padding="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        android:fontFamily="@font/opensans_regular"
        android:gravity="left"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activityTxt1"
        android:textColor="@color/link_color" />
    <TextView
        android:id="@+id/activityTxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textAllCaps="false"
        android:padding="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        android:fontFamily="@font/opensans_regular"
        android:gravity="left"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activityTxt2"
        android:textColor="@color/link_color" />

    <TextView
        android:id="@+id/activityTxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textAllCaps="false"
        android:padding="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        android:fontFamily="@font/opensans_regular"
        android:gravity="left"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activityTxt3"
        android:textColor="@color/link_color" />



    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:textAllCaps="false"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:text="@string/configure_apps"
        android:fontFamily="@font/opensans_regular"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/_20sdp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/dismissButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/configure_apps"
        app:layout_constraintBottom_toTopOf="@id/continueButton"
        android:textAllCaps="false"
        android:background="#354355"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
     />
</androidx.constraintlayout.widget.ConstraintLayout>